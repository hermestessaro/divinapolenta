<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cerveja"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.httpfluidobjects.appdivinapolenta.CervejaActivity">

    <RelativeLayout
        android:id="@+id/tela_cerveja_sup"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_above="@+id/linhaVermelha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/fundo_tela_cerveja">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ebc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="TIPO: PILSEN"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="26sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_above="@+id/descricao"
            android:layout_alignEnd="@+id/descricao"
            android:layout_alignRight="@+id/descricao"
            app:srcCompat="@drawable/cerveja01" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/alergicos"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="23dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Produzida com ingredientes 100% naturais, sem conservantes, com uma fórmula que se tornou sinônimo de simplicidade e perfeição: água, malte, lúpulo e nada mais."
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/alergicos"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/valor"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/valor"
            android:layout_marginBottom="23dp"
            android:text="ALÉRGICOS: CONTÉM CEVADA, GLÚTEN."
            android:textSize="15sp" />

        <TextView
            android:id="@+id/teor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_alignTop="@+id/descricao"
            android:layout_marginTop="8dp"
            android:text="Teor Alcoólico: 5.0%"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ebc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignLeft="@+id/teor"
            android:layout_alignStart="@+id/teor"
            android:text="IBU: 5 | EBC: 7"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/teor"
            android:layout_alignStart="@+id/teor"
            android:layout_below="@+id/teor"
            android:layout_marginTop="40dp"
            android:text="R$: 4,00 / 100ml"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linhaVermelha"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_red_light">

        <TextView
            android:id="@+id/linha1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:text="Olá Maria, sirva-se à vontade!"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/linha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linha1"
            android:text="Valor: R$ 900,00"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>
