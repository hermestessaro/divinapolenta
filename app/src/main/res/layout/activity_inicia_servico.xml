<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inicia_servico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.httpfluidobjects.appdivinapolenta.IniciaServicoActivity"
    android:background="@drawable/ceva_back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:id="@+id/txtBluetooth"
        android:textSize="32sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/start_screen_first_message" />

    <TextView
        android:text="@string/start_screen_second_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="293dp"
        android:id="@+id/mainText"
        android:textSize="32sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/rounded_red_border"
        android:text="Tela principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEntrar"
        android:onClick="btnEntra"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:width="160dp"
        android:layout_marginBottom="90dp"
        android:textSize="15sp"
        android:height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/mainText"
        android:layout_alignStart="@+id/mainText" />

    <Button
        android:background="@drawable/rounded_red_border"
        android:height="55dp"
        android:text="Tela de Operações"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEntrarOp"
        android:onClick="btnEntraOp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textAlignment="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:width="160dp"
        android:layout_alignBaseline="@+id/btnEntrarMonitora"
        android:layout_alignBottom="@+id/btnEntrarMonitora"
        android:layout_alignRight="@+id/mainText"
        android:layout_alignEnd="@+id/mainText" />

    <Button
        android:background="@drawable/rounded_red_border"
        android:onClick="btnEntraMonitora"
        android:height="55dp"
        android:text="Tela de Monitoramento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEntrarMonitora"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textAlignment="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:width="160dp"
        android:layout_alignTop="@+id/btnEntrar"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

