<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cerveja"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.httpfluidobjects.appdivinapolenta.CervejaActivity"
    android:background="@color/colorWhite">

<TextView
    android:text="CERVEJA"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="42sp"
    android:id="@+id/title"
    android:textStyle="normal|bold"
    android:textAlignment="center"
    android:layout_toRightOf="@id/imageView3"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<ImageView
    android:layout_marginTop="10dp"
    android:layout_width="260dp"
    android:layout_height="260dp"
    app:srcCompat="@drawable/cerveja01"
    android:id="@+id/imageView3"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_marginTop="10dp"
    android:text="Produzida com ingredientes 100% naturais, sem conservantes, com uma fórmula que se tornou sinônimo de simplicidade e perfeição: água, malte, lúpulo e nada mais."
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:id="@+id/textView2"
    android:textSize="26sp"
    android:textAlignment="center"
    android:layout_below="@id/title"
    android:layout_toRightOf="@+id/imageView3"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<TextView

    android:text="Teor alcoólico: 5,0%"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imageView3"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="60dp"
    android:textSize="26sp"
    android:id="@+id/teorAlcoolico" />

<TextView
    android:text="Tempo de fermentação: 28 dias"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:id="@+id/ibu"
    android:layout_below="@+id/teorAlcoolico"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:text="ALÉRGICOS: CONTÉM CEVADA. CONTÉM GLÚTEN"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    android:id="@+id/textView3"
    android:layout_below="@+id/ebc"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
    android:text="Ingredientes: água, malte e lúpulo."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:id="@+id/ebc"
    android:layout_below="@+id/ibu"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:text="R$ 4,50 / 100ml"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView3"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="17dp"
    android:layout_marginBottom="10dp"
    android:textSize="26sp"
    android:id="@+id/valor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/painel"
        android:elevation="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:text="Sirva-se à vontade"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/valorTxtView"
            android:layout_below="@+id/volumeTxtView"
            android:paddingBottom="30dp"
         />

        <TextView
            android:text="Se beber, não dirija"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtSeBeber"
            android:layout_below="@id/valorTxtView"
            android:textStyle="normal|bold"
            android:paddingBottom="6dp"/>

        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/volumeTxtView"
            android:paddingBottom="6dp"
            android:layout_below="@+id/nameTxtView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Passe o Cartão"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTxtView"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNFC2"
        android:textSize="20sp"
        android:layout_above="@+id/relativeLayout"
        android:layout_marginBottom="21dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
